@model Employee
@{
    ViewData["Title"] = "Employee Details";
}

<h1>Employee Details</h1>

<br />
<br />

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" readonly/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age" class="col-form-label"></label>
        <input asp-for="Age" class="form-control" readonly/>
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="col-form-label"></label>
        <input asp-for="Address" class="form-control" readonly />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Salary" class="col-form-label"></label>
        <input asp-for="Salary" class="form-control" readonly />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="IsActive" class="form-check-input" disabled />
        <label asp-for="IsActive" class="col-form-label"></label>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="col-form-label"></label>
        <input asp-for="Email" class="form-control" readonly />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" readonly />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HiringDate" class="col-form-label"></label>
        <input asp-for="HiringDate" class="form-control" readonly />
        <span asp-validation-for="HiringDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for=Gender class="col-form-label"></label>
        <br />
        @foreach (Gender genderOption in Enum.GetValues(typeof(Gender)))
        {
            <label class="radio-inline">
                @Html.RadioButtonFor(E => E.Gender, genderOption, new { disabled = "disabled" }) @genderOption
            </label>
        }

        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployeeType" class="col-form-label"></label>
        <select asp-for="EmployeeType"
                class="form-control"
                asp-items="Html.GetEnumSelectList<EmpType>()" disabled>
            <option>Select Gender</option>
        </select>
        <span asp-validation-for="EmployeeType" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-light">Back to list</a>
    </div>
</form>